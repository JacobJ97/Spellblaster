<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ghostchippies.spellblaster">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:icon="@mipmap/ic_launcher">
        <activity
            android:name="com.ghostchippies.spellblasterforandroidv44.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ghostchippies.spellblasterforandroidv44.Settings"
            android:label="Settings"
            android:launchMode="singleTop"
            android:parentActivityName="com.ghostchippies.spellblasterforandroidv44.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.ghostchippies.spellblasterforandroidv44.HighScores"
            android:label="High Scores"
            android:parentActivityName="com.ghostchippies.spellblasterforandroidv44.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.ghostchippies.spellblasterforandroidv44.Game"
            android:label=""
            android:theme="@style/AppTheme" />
    </application>

</manifest>